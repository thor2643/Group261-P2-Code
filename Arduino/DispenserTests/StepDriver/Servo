#include <Servo.h>

Servo myservo;

void setup() {
  myservo.attach(9); // attaches the servo to PWM pin 9
}

void loop() {
  // rotate servo from 0 to 180 degrees
  for (int pos = 0; pos <= 180; pos += 1) {
    myservo.write(pos);
    delay(15);
  }
  // rotate servo from 180 to 0 degrees
  for (int pos = 180; pos >= 0; pos -= 1) {
    myservo.write(pos);
    delay(15);
  }
}
